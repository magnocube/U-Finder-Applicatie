<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ml.u_finder.u_finder.MenuActivity"
    android:background="@drawable/background_inloggen">


    ++<ImageView
        android:id="@+id/Kaart"
        android:layout_width="383dp"
        android:layout_height="494dp"
        android:layout_above="@+id/track"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"
        android:src="@drawable/logo_ufinder"
        android:tag="DeKaart" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20px"
        android:layout_below="@+id/Kaart"
        android:background="@color/Transparent"
        android:popupBackground="@color/Transparent" />

    <Spinner
        android:id="@+id/spinnerRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20px"
        android:layout_below="@+id/spinner"
        android:background="@color/Transparent"
        android:popupBackground="@color/Transparent" />

    <Button
        android:id="@+id/track"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/Green"
        android:text="Track" />

</RelativeLayout>
