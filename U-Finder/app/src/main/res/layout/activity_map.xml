<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ml.u_finder.u_finder.MenuActivity"
    android:background="@drawable/background_inloggen">


    <ImageView
        android:id="@+id/Kaart"
        android:layout_width="383dp"
        android:layout_height="494dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@null"
        android:src="@drawable/logo_ufinder"
     />

    <Button
        android:id="@+id/GetKaart"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Kaart"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:text="@string/Getlocation"
        android:textColor="@color/Green" />

    <Button
        android:id="@+id/Track"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/GetKaart"
        android:layout_alignBottom="@+id/GetKaart"
        android:layout_alignStart="@+id/Kaart"
        android:text="@string/Startstop"
        android:textColor="@color/Green" />

</RelativeLayout>
